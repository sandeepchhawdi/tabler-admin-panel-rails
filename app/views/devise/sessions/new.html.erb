<% content_for :title, "Sign in" %>
<div class="container-tight py-4">
  <div class="text-center mb-4">
    <a href="." class="navbar-brand navbar-brand-autodark"><img src="/assets/static/logo.svg" height="36" alt=""></a>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'card card-md'}) do |f| %>
    <div class="card-body">
      <h2 class="card-title text-center mb-4">Login to your account</h2>
      <div class="mb-3">
        <%= f.label :email_address, class: 'form-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Enter email' %>
      </div>
      <div class="mb-2">
        <label class="form-label">
          Password
          <%- if devise_mapping.recoverable? %>
            <span class="form-label-description">
              <%= link_to "Forgot your password?", new_password_path(resource_name) %>
            </span>
          <% end %>
        </label>
        <div class="input-group input-group-flat">
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Enter email' %>
          <span class="input-group-text">
            <a href="#" class="link-secondary" title="Show password" data-bs-toggle="tooltip"><!-- Download SVG icon from http://tabler-icons.io/i/eye -->
              <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><circle cx="12" cy="12" r="2" /><path d="M22 12c-2.667 4.667 -6 7 -10 7s-7.333 -2.333 -10 -7c2.667 -4.667 6 -7 10 -7s7.333 2.333 10 7" /></svg>
            </a>
          </span>
        </div>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="mb-2">
          <label class="form-check">
            <%= f.check_box :remember_me, class: 'form-check-input' %>
            <span class="form-check-label">Remember me on this device</span>
          </label>
        </div>
      <% end %>
      <div class="form-footer">
        <%= f.submit "Sign in", class: "btn btn-primary w-100"%>
      </div>
    </div>
  <% end %>
  <div class="text-center text-muted mt-3">
    <%- if devise_mapping.registerable? %>
      Don't have account yet? 
      <%= link_to "Sign up", new_registration_path(resource_name) %><br />
    <% end %>
  </div>
</div>
